{
  "compilerOptions": {
    "lib": ["es2015"],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "importsNotUsedAsValues": "preserve",
    "preserveValueImports": false,
    "strict": true,
    "sourceMap": true
  },
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["index.js"],
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ],
}
