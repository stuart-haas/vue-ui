{
  "name": "vue-ui",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "lint": "eslint . --ext .vue,.js,.ts",
    "fix": "eslint . --ext .vue,.js,.ts --fix",
    "typecheck": "vue-tsc --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,vue}": [
      "npm run fix"
    ]
  },
  "dependencies": {
    "pinia": "^2.0.13",
    "vue": "^3.2.31",
    "vue-router": "^4.0.12",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/node": "^16.11.26",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.5.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "~4.5.5",
    "unplugin-vue-components": "^0.19.3",
    "vite": "^2.8.4",
    "vite-svg-loader": "^3.3.0",
    "vue-tsc": "^0.31.4"
  }
}
